<div class="jumbotron">
  <div class="index-sub-nav">
      <class id="sub-nav-learn"><%= link_to "LEARN"%> <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></class>
      <class id="sub-nav-resources"> <%= link_to "RESOURCES"%> <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span><class>
      <class id="sub-nav-favorites"> <%= link_to "MY FAVORITES" %> <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></class>
  </div>

  <div class="search-form-landing">
    <form accept-charset="UTF-8" action="/search/results" id="new_site_search" method="get" novalidate="novalidate"><div style="margin:0;padding:0;display:inline"></div>
      <div class="input-group">
        <div class="pull-left">

        <div class="company-search-input-container hidden">
          <div id="scrollable-dropdown-menu">
            <%= content_tag :div, id: "site_search_company" do %>
              <input class="typeahead" type="text" placeholder="Enter a company name...", name="q" size="70" style="float: none; position: relative; vertical-align:top; height:36px">
            <% end %>
          </div>
        </div>

        <div class="topic-search-input-container">
            <%= content_tag :div, id: "site_search_format" do %>
              <input class="typeahead" type="text" placeholder="I'm searching for...", name="qf", size="43" style="float:left; position: relative; vertical-align: top; height:36px; display:inline">
            <% end %>
            <%= content_tag :div, id: "site_search_topic" do %>
              <input class="typeahead" type="text" placeholder="about..", name="qt" size="27" style="height:36px; vertical-align: top; ">
            <% end %>
        </div>
      </div>
        <div class="pull-right">
          <input class="btn btn-info btn-homepage" name="commit" type="submit" value="search">

    <!-- <div class="toggle-input-container"> -->
      <a href="#" class="toggle-input-topic hidden">Search by format + topic</a>
      <a href="#" class="toggle-input-company">Search by company </a>
    </div>
    <!-- </div> -->
    </div>
  </div>
</form>
</div>

<div class="container" style="margin-top:-2em;">
  <div class="row">
    <div class="col-md-8">
      <p style="color:#B59A76; font-weight:bold; font-size:0.9em;"><%= @offering.format %><tag style="color:black"> | </tag><% @offering.tags.each do |t| %> <%= t.name %> <% end %></p>
      <h4><%= @offering.name.titleize %></h2>
      <p> <%= link_to @offering.organization.name.titleize, organization_path(@offering.organization) %></p>
      <% if @offering.avatar_file_name == nil  %>
        <%= image_tag @offering.organization.avatar.url(:square) %>
      <% else %>
        <%= image_tag @offering.avatar.url(:square) %>
      <% end %>
      <p><%= @offering.description %></p>
      <br>
        <div class="well" id="offering-details">
            <h4 id="offering-details-title"><strong>DETAILS</strong></h4>
            <h5>DATE: <span style='font-weight:normal; padding-left:1em;'><%= @offering.date %></span></h5>
            <h5>LOCATION:<span style='font-weight:normal; padding-left:1em'> <%= @offering.location %></span></h5>
            <h5>LENGTH:<span style='font-weight:normal; padding-left:1em'> <%= @offering.length %></span></h5>
            <h5>FORMAT: <span style='font-weight:normal; padding-left:1em'><%= @offering.format %></span></h5>
            <h5>PRICE: <span style='font-weight:normal; padding-left:1em'><%= @offering.price %></span></h5>
            <h5>PAYMENT OPTIONS: </h5>
            <ul>
              <% @offering.payment_options.split(';').each do |p| %>
              <li><%= p.titleize %></li>
              <% end %>
          </ul>
      </div>
      <div class="well" id="offering-details">
        <h4 id="offering-details-title"><strong>MATERIALS & RESOURCES</strong></h4>
        <% if @offering.materials != nil %>
        <ul>
          <% @offering.materials.split(';').each do |o| %>
          <li><%= o.titleize %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <%= link_to "more about this company", organization_path(@offering.organization), class: "btn btn-primary " %>

    </div>
    <div class="col-md-4" style="text-align:left;">
      <div class="well" id="reserve-spot-div">
      <h4 id="reserve-spot-title">RESERVE SPOT | <%= @offering.price %></h4>
      <p id="buy-tickets"> buy tickets  <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></p>
    </div>
    <div style="padding-bottom:2em;">
      <%= image_tag "map.jpg", size: "360x170"  %>
    </div>
    <h5 id="similar-offerings"> <%= pluralize('similar', @offering.format.downcase) %>  </h5>
    <% @similar.each do |offering| %>
      <div class="well similar-offerings">
        <% if @offering.avatar_file_name == nil  %>
          <%= image_tag @offering.organization.avatar.url, size: "100x100" %>
        <% else %>
          <%= image_tag @offering.avatar.url, size: "100x100" %>
        <% end %>
        <h5 style="text-align:left"><%= offering.name %> <span style="padding-right:0.5em;"></span>  | <span style="padding-left:0.5em;"></span> <%= offering.organization.name %></h5>
      </div>
    <% end %>
    </div>
  </div>
</div>
