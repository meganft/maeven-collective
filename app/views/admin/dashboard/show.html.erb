<div class="container">
  <h2 id="admin-header-dashboard"> Welcome to Your Admin Dashboard</h2>
  <div class="well">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <h4 style="text-align:center; padding-top:10px;"><%= link_to "Add An Organization Here", new_admin_organization_path, class: "btn btn-success" %></h4>
        </div>
        <div class="col-md-4">
          <h4 style="text-align:center; padding-top:10px;"><%= link_to "Manage Categories Here", new_admin_category_path, class: "btn btn-info" %></h4>
        </div>
        <div class="col-md-4">
          <h4 style="text-align:center; padding-top:10px;"><%= link_to "Manage Tags Here", new_admin_tag_path, class: "btn btn-success" %></h4>
        </div>
      </div>
    </div>
  </div>

  <div id="current-organizations">
  <h3 style="text-align:center;">Current Organizations:</h3>
  <%= render partial: "admin/dashboard/letters" %>

  <%= form_tag admin_dashboard_path, :method => 'get' do %>
   <p><%= text_field_tag :search, params[:search], placeholder: "Search Organizations" %>
   <%= submit_tag "Search", :name => nil %></p>
  <% end %>
    <% @organizations.each do |organization| %>
      <h3><%= organization.name.capitalize%></h3>
      <%= image_tag organization.avatar.url(:square) %>
      <h5><%= organization.description %></h5>
      <%= link_to "Edit", edit_admin_organization_path(organization), class: "btn btn-warning" %>
      <h4><%= organization.name.capitalize %>'s Current Offerings are:</h4>
      <% organization.offerings.each do |offering| %>
      <h5><%= link_to offering.name, admin_offering_path(offering) %></h5>
      <p><%= offering.price %></p>
      <p><%= offering.location %></p>
      <p><%= offering.format %></p>
      <% end %>
      <h5><%= link_to "Add an offering for this organization", admin_new_offering_path(organization), class: "btn btn-info" %></h5>
    <% end %>
  </div>
</div>
