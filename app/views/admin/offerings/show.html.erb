<div class="container">
  <div class="panel panel-info">
  <h2 id="admin-header-dashboard">All about <%= @offering.name.titleize %></h2></div>
  <div class="well">
    <h4><strong><%= @offering.name.titleize %></strong></h4>
    <h5><%= @offering.description %></h5>
    <h5><%= @offering.location %></h5>
    <h5><%= @offering.date %></h5>
    <h5><%= @offering.length %></h5>
    <h5><%= @offering.format %></h5>
    <h5><%= @offering.price %></h5>
    <h5><%= @offering.payment_options %></h5>
    <h5><%= @offering.materials %></h5>
    <h5><%= @offering.website %></h5>
    <h4>This offering is from <%= link_to @offering.organization.name.titleize, admin_organization_path(@offering.organization) %></h4>
    <% @offering.tags.each do |tag| %>
    <span class="label label-default"><%= tag.name %></span>
    <% end %>
    <p></p>
    <p><%= link_to "Delete this offering", admin_offering_path(@offering), method: :delete, class: "btn btn-warning btn-sm", data: {confirm: "Are you sure you want to delete this?"} %></p>
    <p><%= link_to "Edit this offering", edit_admin_offering_path(@offering), class: "btn btn-info btn-sm" %></p>
  </div>
  <p><%= link_to " << Back to Your Dashboard", admin_dashboard_path, class: "btn btn-success btn-sm"%></p>
</div>
