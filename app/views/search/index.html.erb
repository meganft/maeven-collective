<div class="container">
  <h3 style="text-align:center; padding-bottom: 20px; font-family: Raleway;">SEARCH RESULTS</h3>
  <div class="row">
    <div class="col-md-4 search-results-left">
      <h4 style="text-align:left;">ALL</h4>
      <h4 style="text-align:left;">DIGITAL COURSES</h4>
      <h4 style="text-align:left;">CONFERENCES</h4>
      <h4 style="text-align:left;">WEBINARS</h4>

    </div>
    <div class="col-md-8 search-results-right">
      <div class="container">
        <% @organizations.each do |organization| %>
        <h4 style="font-weight:200;"><%= link_to organization.name.capitalize, organization_path(organization) %></h4>
        <%= image_tag organization.avatar.url(:square) %>
        <% organization.categories.each do |category| %>
        <p><span class="label label-default"><%= link_to category.name, category_path(category) %></span></p>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
