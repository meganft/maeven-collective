<div class="row">
  <div class="col-md-12">
      <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <div class="row">
              <% @featured_first.each do |offering| %>
                <div class="col-sm-3">
                  <% if offering.avatar_file_name == nil  %>
                    <%= link_to image_tag offering.organization.avatar.url(:square), class: "center-block-img", size:'220x220' %>
                  <% else %>
                    <%= link_to image_tag offering.avatar.url(:square), class: "center-block-img", size:'220x220' %>
                    <% end %>
                  <h5 class="carousel-title"><%= offering.name.upcase %></h5>
                </div>
              <% end %>
            </div>
          </div>

